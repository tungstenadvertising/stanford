{
	"dependencies": {
		"@tailwindcss/cli": "^4.1.7",
		"sharp": "^0.34.2",
		"tailwindcss": "^4.1.7"
	},
	"devDependencies": {
		"concurrently": "^8.2.2",
		"replace-in-file": "^8.3.0",
		"vite": "^5.2.0",
		"webp-converter-cli": "^0.0.5"
	},
	"scripts": {
		"dev": "concurrently \"vite\" \"npx tailwindcss -i ./src/css/input.css -o ./src/css/style.css --watch\" ",
		"build": "npm run build:css && npm run build:webp && npm run build:copy-svg && npm run build:copy-html",
		"build:copy-html": "cp src/*.html build/",
		"build:css": "npx tailwindcss -i ./src/css/input.css -o ./build/css/style.min.css --minify",
		"build:webp": "node convert-images.js",
		"build:copy-svg": "cp src/images/*.svg build/images/"
	}
}
